<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center" android:background="@android:color/white">

    <Button
            android:id="@+id/btn_start_app"
            android:text="@string/start_cast_app"
            style="@style/TextButton"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_pause_play"
            android:text="@string/pause"
            style="@style/TextButton"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>


    <Button
            android:id="@+id/btn_stop_app"
            android:text="@string/stop_cast_app"
            style="@style/TextButton"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>


</LinearLayout>